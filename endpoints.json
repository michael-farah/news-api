      "exampleResponse": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    },
    "/api/articles": {
      "method": "GET",
      "description": "Returns an array of all articles, sorted by default in descending order by created_at",
      "queries": ["sort_by, order"],
      "requestBody": null,
      "exampleResponse": {
        "articles": [
          {
            "author": "weegembump",
            "title": "The best fish for the week",
            "article_id": 3,
            "topic": "cooking",
            "created_at": "2022-05-30T15:59:13.341Z",
