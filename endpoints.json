{
  "endpoints": {
    "/api": {
      "method": "GET",
      "description": "Lists all available endpoints in the API as a JSON object",
      "queries": [],
      "requestBody": null,
      "exampleResponse": {
        "endpoints": {
          "/api/topics": {},
          "/api/articles": {},
          "/api/articles/:article_id": {},
          "/api/articles/:article_id/comments": {}
        }
      }
